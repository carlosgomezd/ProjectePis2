<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerfilUsuarioActivity">

    <ImageView
        android:id="@+id/usuario_vic_imagen"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/user"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/usuario_vic_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usuario_vic_imagen"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:textSize="15dp"
        android:textAlignment="center"
        android:text="Nombre"/>
    <TextView
        android:id="@+id/usuario_vic_apellido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usuario_vic_nombre"
        android:padding="10dp"
        android:textSize="15dp"
        android:textAlignment="center"
        android:text="apellido"/>

    <Button
        android:id="@+id/enviar_mensaje_usuario_vic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/usuario_vic_apellido"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:text="ENVIAR SOLICITUD"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/cancelar_mensaje_usuario_vic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/enviar_mensaje_usuario_vic"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:text="CANCELAR SOLICITUD"
        android:visibility="gone"
        android:textStyle="bold"/>


</RelativeLayout>