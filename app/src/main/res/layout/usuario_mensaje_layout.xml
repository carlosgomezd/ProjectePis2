<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/recibir_mensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/recibir_mensaje"
        android:text="Recibir Mensaje"
        android:textStyle="bold"
        android:padding="10dp"
        android:textSize="14dp"/>

    <ImageView
        android:id="@+id/imagen_mensaje_enviar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/imagen_mensaje_recibir"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/enviar_mensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="@+id/recibir_mensaje"
        android:background="@drawable/enviar_mensaje"
        android:text="Enviar Mensaje"
        android:textSize="14dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:textColor="@color/white"
        android:layout_marginRight="5dp"/>

</RelativeLayout>